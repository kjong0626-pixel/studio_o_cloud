name: ORIQ Auto Run

on:
  schedule:
    - cron: "0 * * * *"  # ë§¤ ì •ê°ë§ˆë‹¤ ìë™ ì‹¤í–‰ (UTC ê¸°ì¤€)
  workflow_dispatch:     # ìˆ˜ë™ ì‹¤í–‰ ë²„íŠ¼ë„ í—ˆìš©

jobs:
  run-oriq:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.10"

      - name: Install dependencies
        run: |
          pip install -r requirements.txt || echo "No requirements.txt found"

      - name: Run ORIQ automation
        run: |
          echo "ğŸš€ Starting ORIQ automation..."
          python oriq.py
